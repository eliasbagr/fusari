<script>
    document.addEventListener('DOMContentLoaded', function() {
        const music = document.getElementById('background-music');
        const playIcon = document.getElementById('play-icon');
        const pauseIcon = document.getElementById('pause-icon');

        // Zkontrolujeme, zda je načtený audio element a ikony
        if (music && playIcon && pauseIcon) {
            playIcon.addEventListener('click', function() {
                if (music.paused) {
                    music.play();  // Spustí hudbu
                    playIcon.style.display = 'none';  // Skryje ikonu pro zapnutí
                    pauseIcon.style.display = 'inline';  // Zobrazí ikonu pro pozastavení
                }
            });

            pauseIcon.addEventListener('click', function() {
                if (!music.paused) {
                    music.pause();  // Pauzuje hudbu
                    playIcon.style.display = 'inline';  // Zobrazí ikonu pro zapnutí
                    pauseIcon.style.display = 'none';  // Skryje ikonu pro pozastavení
                }
            });
        } else {
            console.error("Audio element nebo ikony nebyly nalezeny!");
        }
    });
</script>


